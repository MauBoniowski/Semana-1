# Funcion:
def saludo(nombre):
   print("Hola", nombre + ", Bienvenido.")

# Programa:
usuario = input("Ingrese su nombre: ")
saludo(usuario)

# Funcion:
def operaciones(num1, num2):
    print("Suma:", num1 + num2)
    print("Resta:", num1 - num2)
    print("Multiplicacion:", num1 * num2)
# Programa:
n1 = float(input("Ingrese el primer numero: "))
n2 = float(input("Ingrese el segundo numero: "))
operaciones(n1, n2)

# Funcion: 
def area_triangulo(base, altura):
    return (base * altura) / 2
# Programa:
b = float(input("Ingrese la base del triangulo: "))
a = float(input("Ingrese la altura del triangulo: "))
resultado = area_triangulo(b, a)
print("El area del triangulo es: ", resultado)

# Funcion: 
def buscar_mayor (n1, n2, n3):
    if n1 > n2 and n1 >= n3:
        mayor = n1
        if n2 >= n3:
            medio = n2 
            menor = n3
        else:
            medio = n3
            menor = n2
    elif n2 >= n1 and n2 >= n3:
        mayor = n2 
        if n1 >= n3:
            medio = n1 
            menor = n3
        else:
            medio = n3
            menor = n1
    else:
        mayor = n3
        if n1 >= n2: 
            medio = n1
            menor = n2
        else: 
            medio = n2
            menor = n1
    return mayor, medio, menor 
# Programa:
a = float(input("Ingrese el primer numero: "))
b = float(input("Ingrese el segundo numero: "))
c = float(input("Ingrese el tercer numero: "))
ordenados = buscar_mayor(a, b, c)
print("Los numeros ordenados de mayor a menor son: ", ordenados)

# Funcion:
def es_par(numero):
    return numero % 2 == 0
# Programa: 
n = int(input("Ingrese un numero: "))
if es_par(n):
    print("El numero", n, "es par.")
else:
    print("El numero", n, "es impar.")

# Funcion:
def convertir_minutos(minutos):
    horas = minutos // 60
    minutos_sobra = minutos % 60
    return horas, minutos_sobra
# Programa:
minutos_totales = int(input("Ingrese la cantidad de minutos: "))
horas , minutos = convertir_minutos(minutos_totales)
print(f"{minutos_totales} minutos son {horas} horas y {minutos} minutos.")

# Funcion:
def verificar_acceso(edad):
    return edad >= 18
# Programa:
edad_usuario = int(input("Ingrese su edad: "))
if verificar_acceso(edad_usuario):
    print("Acceso permitido. Usted es mayor de edad.")
else:
    print("Acceso denegado. Usted no es mayor de edad.")

# Funcion: 
def calcular_edad(año_nacimiento, año_actual):
    return año_actual - año_nacimiento
# Programa: 
año_usuario = int(input("Ingrese su año de nacimiento: "))
año_actual = int(input("Ingrese el año en el que esta: "))
edad = calcular_edad(año_usuario, año_actual)
print(f"Usted tiene {edad} años.")
